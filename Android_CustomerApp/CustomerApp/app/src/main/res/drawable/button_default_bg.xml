<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item  android:state_pressed="true" >
        <shape>
            <solid
                android:color="#ff3333" />
            <stroke
                android:width="1dp"
                android:color="#ffb3b3" />
            <corners
                android:radius="1dp" />
           
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#ffe5e5"
                android:endColor="#e60000"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#ffb3b3" />
            <corners
                android:radius="1dp" />
           
        </shape>
    </item>
</selector>